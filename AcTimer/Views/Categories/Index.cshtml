@model AcTimer.ViewModels.CategoryFilterViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.Partial("_CategoryFilter")
<hr />
<div class="container">
    <div class="row">
        <div class="col-lg-12"><a type="button" class="btn btn-primary btn-lg btn-block" href="@Url.Action("New")">Add a new category</a></div>
        <div class="col-lg-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Category</th>
                        <th scope="col">Added Date</th>
                        <th scope="col">Added by</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@Html.ActionLink("View", "Details", routeValues: new { @id = item.Id })</td>
                            <td><strong>@item.Name</strong></td>
                            <td>@Html.DisplayFor(c => item.DateAdded)</td>
                            <td>@item.ApplicationUser.UserName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


