@model AcTimer.Models.Category
@{
    ViewBag.Title = "CategoryForm";
}

<h2>Category</h2>
@using (Html.BeginForm("Save", "Categories", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>@Model.ViewTitle</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.HiddenFor(c => c.Id)
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>

    </div>
}
<div>
    @Html.ActionLink("Back to List", "Dashboard")
</div>
    @section scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }
