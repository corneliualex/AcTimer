@model AcTimer.Models.Category
@{
    ViewBag.Title = "CategoryForm";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12"><h2>@Model.ViewTitle Category</h2></div>
        <div class="col-lg-12">

            @using (Html.BeginForm("Save", "Categories", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(c => c.Name)
                    @Html.TextBoxFor(c => c.Name, htmlAttributes: new { @class = "form-control", @placeholder = "required" })
                    @Html.ValidationMessageFor(c => c.Name)
                </div>

                @Html.HiddenFor(c => c.Id)
                @Html.AntiForgeryToken()
                <input type="submit" value="Save" class="btn btn-primary" />
            }
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
