@model AcTimer.ViewModels.ActivityFiltersViewModel

@using (Html.BeginForm("Index", "Activities", FormMethod.Get))
{

    <hr />
    <div class="row">

        <div class="col-md-4">
            <select class="form-control" id="categoryId" name="categoryId">
                <option value="">Categories</option>
                @foreach (var item in Model.Categories)
                {
                    if (item.Id == Model.CategoryId)
                    {

                        <option value="@item.Id" selected>@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
        </div>

        <div class="col-md-4">
            <input class="form-control" id="Date" type="text" name="Date" placeholder="Date" />
        </div>

        <div class="col-md-4">
            <input type="submit" class="btn btn-default form-control" value="Filter" />
        </div>


    </div>
    <hr />
}


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(function () {
        $('#Date').datetimepicker({
            format: "MM.DD.YYYY"
        }).on('dp.change', function (e) {
            $(this).data('DateTimePicker').hide();
        });
    });
</script>