@model AcTimer.ViewModels.ActivityFiltersViewModel

@using (Html.BeginForm("Dashboard", "Activities", FormMethod.Get))
{
    <div class="form-inline">
        <hr />
        <div class="row">
            <div class="col-lg-2">
                <h4>Filter</h4>
            </div>

            <div class="col-lg-2">
                <select class="form-control" id="categoryId" name="categoryId">
                    <option value="">Categories</option>
                    @foreach (var item in Model.Categories)
                {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>

            <div class="col-lg-3">
                <input class="form-control" id="Date" type="text" name="Date" placeholder="Date" />
            </div>


            <div class="col-lg-3">
                <input type="submit" class="btn btn-default form-control" value="Filter" />
            </div>

        </div>
    </div>
    <hr />
}


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(function () {
        $('#Date').datetimepicker({
            format: "MM.DD.YYYY"
        }).on('dp.change', function (e) {
            $(this).data('DateTimePicker').hide();
        });
    });
</script>
