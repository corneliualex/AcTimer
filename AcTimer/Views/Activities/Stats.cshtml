<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="~/Scripts/Charts/piechart-stats.js"></script>
<script src="~/Scripts/Charts/linechart-stats.js"></script>
@{
    ViewBag.Title = "Stats";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 style="text-align:center">STATS</h2>
        </div>
    </div>
    <hr />
    <div class="container-fluid" style="float:left; width:40%">
        <div class="row">
            <div class="col-md-12">
                <div id="piechart"></div>
            </div>

        </div>

    </div>
    <div class="container-fluid" style="float:left; width:60%">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Category</th>
                            <th scope="col">Avg. Time</th>
                            <th scope="col">Stats</th>
                        </tr>
                    </thead>
                    <tbody id="body"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>


