@model IEnumerable<AcTimer.Models.Activity>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12"><a type="button" class="btn btn-primary btn-lg btn-block" href="@Url.Action("New")">Add a new activity</a></div>
        <div class="col-lg-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col">@Html.ActionLink("Category","Index",routeValues : new { @sortOrder = ViewBag.Category})</th>
                        <th scope="col">Time Spent (h)</th>
                        <th scope="col">Description</th>
                        <th scope="col">Date</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ApplicationUser.UserName</td>
                            <td>@Html.ActionLink("View", "Details", routeValues: new { @id = item.Id })</td>
                            <td>@item.Category.Name</td>
                            <td>@item.TimeSpent.ToString(@"hh\:mm")</td>
                            <td>@item.Description</td>
                            <td>@item.Date.ToString("dd/MM/yyyy")</td>
                            <td>@Html.ActionLink("Edit", "Edit", routeValues: new { @id = item.Id })</td>
                            <td>@Html.ActionLink("Delete", "Delete", routeValues: new { @id = item.Id }, htmlAttributes: new { @onclick = "return confirm('Are sure wants to delete?');" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
