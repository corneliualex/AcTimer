@model IEnumerable<AcTimer.Controllers.UserRoles>

@{
    ViewBag.Title = "Index";
}

<h2>App Members</h2>
<div class="container">
    <a type="button" class="btn btn-primary btn-lg btn-block" href="@Url.Action("New")">Add a new user</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">UserName</th>
                <th scope="col">Roles</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.User.UserName</td>
                    <td>
                        @foreach (var role in user.Roles)
                {
                            <b>@(role + " ")</b>
                        }
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a onclick="return confirm('Are sure wants to delete?');" href="@Url.Action("Delete",routeValues: new { @id = user.User.Id})"><span class="glyphicon glyphicon-remove"></span></a>
                        }

                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>






