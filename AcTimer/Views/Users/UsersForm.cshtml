@model AcTimer.Models.RegisterAccountViewModel
@{
    ViewBag.Title = "UsersForm";
}

<h2>RegisterUser</h2>

@using (Html.BeginForm("RegisterUser", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IdentityRoleId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.IdentityRoleId, new SelectList(Model.Roles, "Id", "Name"), "Roles", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            <a type="button" class="btn btn-default" href="@Url.Action("Index")">Back</a>
        </div>
        <div class="col-md-2 col-md-10">
            @Html.HiddenFor(c => c.IdentityRoleId)
            <input type="submit" class="btn btn-default" value="Register" />            
        </div>
    </div>


}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}